<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Conferir sua idade:"
        android:id="@+id/tv_texto"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_nome"
        android:hint="Por favor, digite sua nome:"
        android:textSize="25sp"
        android:inputType="text"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_texto"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_idade"
        android:hint="Por favor, digite sua idade:"
        android:textSize="25sp"
        android:inputType="text"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/et_nome"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_RG"
        android:hint="Por favor, digite seu RG:"
        android:textSize="25sp"
        android:inputType="text"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/et_idade"
        />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text=""
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/et_RG"
        tools:layout_editor_absoluteX="7dp" />

    <Button
        android:id="@+id/botao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:onClick="clique"
        android:text="Verificar idade!"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultado"
        tools:layout_editor_absoluteX="7dp" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>